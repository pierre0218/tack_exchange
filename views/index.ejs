<% if (!loginStatus) { %>
<div class="hero-unit">
    <h1>Welcome to Tack Exchange</h1>
    <p>Tack Exchange is a cryptocurrency exchange platform based on Node.js.</p>
    <p>
        <a class="btn btn-primary btn-large" href="/login">Sign In</a>
        <a class="btn btn-large" href="/reg">Register</a>
    </p>
</div>
<% } else { %>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
            <div>
                <img src="<%= iconPath %>.png" height="42" width="42">
            </div>
            <div id="accordion" class="ui-accordion ui-widget ui-helper-reset">
                <h3 class="accordion-header ui-accordion-header ui-helper-reset ui-state-default ui-accordion-icons ui-corner-all">TICKER</h3>
                <div class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom">
                    <div class="row-fluid" style="text-align:center;">
                        <p class="span4">SYMBOL</p>
                        <p class="span4">LAST 24 HR</p>
                        <p class="span4">VOLUME</p>
                    </div>
                    <hr />
                
                    <% tickers.forEach(function(ticker, index) { %>
                        <div class="row-fluid">
                            <p class="span4" style="text-align:center;"><%= ticker.symbol %></p>
                            <p class="span4" style="text-align:right;"><%= ticker.lastusd %></p>
                            <p class="span4" style="text-align:right;"><%= ticker.volume %></p>
                        </div>
                    <% }) %>
                    
                </div>
                <h3 class="accordion-header ui-accordion-header ui-helper-reset ui-state-default ui-accordion-icons ui-corner-all">ORDER FORM</h3>
                <div class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom">
                    <form method="post" action="/post">
                        <div class="row" style="text-align:left;">
                            <p class="span1" style="margin-right:15px;">Price:</p>
                            <p class="span1">Amount:</p>
                        </div>
                        <div class="row" style="text-align:left;">
                            <input type="text" style="width:90px;margin-left:30px;" name="price">
                            <input type="text" style="width:90px;margin-left:10px;" name="amount">
                        </div>
                        <div class="row" style="text-align:left;">
                        <button type="submit" class="btn btn-success" style="margin-left:30px;">Margin Buy</button>
                        <button type="submit" class="btn btn-success">Margin Sell</button>
                        </div>
                    </form>
                </div>
                <h3 class="accordion-header ui-accordion-header ui-helper-reset ui-state-default ui-accordion-icons ui-corner-all">BALANCES</h3>
                <div class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom">
                    <div class= "row-fluid" style="text-align:right;">
                        <p class="span2"></p>
                        <p class="span2"></p>
                        <p class="span3" style="font-size:10px">EXCHANGE</p>
                        <p class="span2" style="font-size:10px">MARGIN</p>
                        <p class="span2" style="font-size:10px">FUNDING</p>
                    </div>

                    <% tickers.forEach(function(ticker, index) { %>
                        <div class="row-fluid ">
                            <p class="span2" style="text-align:center;"><img src="<%= ticker.icon_path %>.png" height="22" width="22"></p>
                            <p class="span2" style="text-align:center;"><%= ticker.symbol %></p>
                            <p class="span2" style="text-align:right;"><%= ticker.total %></p>
                            <p class="span2" style="text-align:right;"><%= ticker.total %></p>
                            <p class="span2" style="text-align:right;"><%= ticker.total %></p>
                        </div>
                    <% }) %>
                </div>
                <h3 class="accordion-header ui-accordion-header ui-helper-reset ui-state-default ui-accordion-icons ui-corner-all">SUMMARY</h3>
                <div class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom">
                    <div class="row-fluid ">
                        <p class="span8">BTC/USD Tradable Balance </p>
                        <p class="span4" style="text-align:right;">0.00</p>
                    </div>

                    <div class="row-fluid ">
                        <p class="span5"> </p>
                        <p class="span5" style="text-align:center;">LIQUIDATION</p>
                    </div>

                    <div class="row-fluid ">
                        <p class="span8">BTC/USD Maintenance </p>
                        <p class="span4" style="text-align:right;">15.00%</p>
                    </div>

                    <div class="row-fluid ">
                        <p class="span8">Required equity </p>
                        <p class="span4" style="text-align:right;">0.00</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="span9">
            <div id="accordion" class="ui-accordion ui-widget ui-helper-reset">
                <h3 class="accordion-header ui-accordion-header ui-helper-reset ui-state-default ui-accordion-icons ui-corner-all">CHART (<%= pairName %>)</h3>
                <div class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom">
                    <img src="<%= chartPath %>.png">
                </div>
                <h3 class="accordion-header ui-accordion-header ui-helper-reset ui-state-default ui-accordion-icons ui-corner-all">POSITIONS</h3>
                <div class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom">No elements to show</div>
                <h3 class="accordion-header ui-accordion-header ui-helper-reset ui-state-default ui-accordion-icons ui-corner-all">ORDERS</h3>
                <div class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom">No active orders</div>
                <h3 class="accordion-header ui-accordion-header ui-helper-reset ui-state-default ui-accordion-icons ui-corner-all">ORDER HISTORY</h3>
                <div class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom">No elements to show</div>
            </div>
            <div class="row-fluid">
                <div class="span7">
                    <div id="accordion" class="ui-accordion ui-widget ui-helper-reset">
                        <h3 class="accordion-header ui-accordion-header ui-helper-reset ui-state-default ui-accordion-icons ui-corner-all">ORDER BOOK (<%= pairName %>)</h3>
                        <div class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom">
                            <img src="<%= bookPath %>.png">
                        </div>
                    </div>
                </div>
                <div class="span5">
                    <div id="accordion" class="ui-accordion ui-widget ui-helper-reset">
                        <h3 class="accordion-header ui-accordion-header ui-helper-reset ui-state-default ui-accordion-icons ui-corner-all">TRADES</h3>
                        <div class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-all">
                            <img src="<%= tradePath %>.png">
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>

<% } %>
